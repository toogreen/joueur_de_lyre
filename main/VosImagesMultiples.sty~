\newcommand{\DeuxImagesCentrees}{%
\begin{figure}[h!]%
	\begin{center}%
		\leavevmode%
		\subfigure[Description sous l'image 1]{%
			\label{IdentifiantPourRefImage1}%
			\includegraphics[width=LargeurImage1cm]{CheminImage1.png}}%
		\hspace{EspaceEntreImagescm}%
		\subfigure[Description sous l'image 2]{%
			\label{IdentifiantPourRefImage2}%
			\includegraphics[width=LargeurImage2cm]{CheminImage2.png}}%
		\caption{Description sous les 2 images}%
		\label{IdentifiantPourRefDes2Images}%
	\end{center}%
\end{figure}%
}

